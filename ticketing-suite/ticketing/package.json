{
  "name": "ticketing",
  "version": "1.0.0",
  "description": "Enterprise-grade multi-tenant ticketing service for asset management platforms.",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "nest start --watch",
    "dev:neon": "node scripts/check-env.js && nest start --watch",
    "check:env": "node scripts/check-env.js",
    "build": "nest build",
    "start": "node dist/src/main.js || node dist/main.js",
    "start:prod": "node dist/src/main.js || node dist/main.js",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "seed": "node -r ts-node/register prisma/seed.ts",
    "seed:test": "node dist/prisma/seed-test-data.js",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js --runInBand",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/terminus": "^10.0.0",
    "@nestjs/throttler": "^6.1.0",
    "@opensearch-project/opensearch": "^2.11.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.54.0",
    "@opentelemetry/sdk-node": "^0.54.0",
    "@prisma/client": "^5.18.0",
    "@types/bcrypt": "^6.0.0",
    "aws-sdk": "^2.1611.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jwks-rsa": "^3.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.4.20",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.18.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "jest": "^29.0.0",
    "prisma": "^5.18.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  },
  "prisma": {
    "seed": "node -r ts-node/register prisma/seed.ts"
  }
}
